alias b='cd ~-'
alias d='tag la'
alias l='tag ls'
alias q='exit'
alias v='nvim'
alias cl='clear && tmux clear-history 2>/dev/null'

alias clip='pbcopy'
alias path='echo $PATH | tr : "\n"'
alias ip='ipconfig getifaddr en0'

alias md='grip >/dev/null 2>&1 -b'
alias act='source (.||_)venv/bin/activate'
alias icat='kitty icat'

alias src='source ~/.zshrc'
alias tsrc='tmux source ~/.config/tmux/tmux.conf'

alias aconf='open-config alacritty'
alias gconf='open-config ghostty'
alias vconf='open-config nvim'
alias tconf='open-config tmux'
alias zconf='nvim ~/.zshrc'
alias pconf='nvim ~/.zprofile'

alias dotenv='source ~/Repos/configs/dotenv'
alias nav='source ~/Repos/configs/nav'

